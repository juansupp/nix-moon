md-autocomplete(
    ng-required='{{required}}'
    md-selected-item='ngModel'
    md-min-length='0'
    md-input-name='name',
    md-search-text='search'
    md-items ='item in searchFn(search)'
    md-item-text='item.display'
    md-selected-item-change='ngChange',
    md-floating-label='{{label}}')
    md-item-template
      span(md-highlight-text='search') {{item.display}}
    div(ng-messages='frm.$error')
      div(ng-message='required') Campo requerido